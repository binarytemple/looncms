<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee   http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<description>Fletcher services</description>
	<display-name>Fletcher Client and Admin</display-name>
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>fletcher.root</param-value>
	</context-param>
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:fletcher-log4j.properties</param-value>
	</context-param>
	<filter>
		<filter-name>SimplePageCachingFilter</filter-name>
		<filter-class>net.sf.ehcache.constructs.web.filter.SimplePageCachingFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>SimplePageCachingFilter</filter-name>
		<url-pattern>/ImageServlet</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>SimplePageCachingFilter</filter-name>
		<url-pattern>/ThumbnailServlet</url-pattern>
	</filter-mapping>
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
	<servlet>
		<description>Spring MVC Dispatcher Servlet</description>
		<display-name>DispatcherServlet</display-name>
		<servlet-name>loon</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>loon</servlet-name>
		<url-pattern>/loon/*</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<error-page>
		<exception-type>org.springframework.web.multipart.MaxUploadSizeExceededException</exception-type>
		<location>/MaxUploadSizeExceededException.jsp</location>
	</error-page>
	<security-constraint>
		<display-name>FLETCHER-SERVER</display-name>
		<web-resource-collection>
			<web-resource-name>loon</web-resource-name>
			<url-pattern>/loon/adminService</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
			<http-method>PUT</http-method>
			<http-method>DELETE</http-method>
			<http-method>HEAD</http-method>
			<http-method>OPTIONS</http-method>
			<http-method>TRACE</http-method>
		</web-resource-collection>
		<auth-constraint>
			<description>Gotta be the altoon administrator</description>
			<role-name>fletcher-admin</role-name>
		</auth-constraint>
	</security-constraint>
	<login-config>
		<auth-method>BASIC</auth-method>
		<realm-name>FLETCHER-SERVER</realm-name>
	</login-config>
	<security-role>
		<description>administrative user</description>
		<role-name>fletcher-admin</role-name>
	</security-role>
</web-app>
